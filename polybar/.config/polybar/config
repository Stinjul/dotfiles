[module/date]
type = internal/date
inherit = module/basecolor

interval = 1

date = %a %b %d,
time = %H:%M:%S

date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

format = <label>
format-padding = 1

label =  %date% %time%


