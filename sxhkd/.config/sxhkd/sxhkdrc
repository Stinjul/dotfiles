super + Return
	kitty

super + d
	rofi -show run

{super + KP_Add,KP86AudioRaiseVolume}
	mpc volume +2

{super + KP_Subtract,XF86AudioLowerVolume}
	mpc volume -2

super + KP_Multiply
	mpc toggle

{XF86AudioPlay,XF86AudioPause,XF86AudioStop,XF86AudioNext,XF86AudioPrev}
	mpc {play,pause,stop,next,prev}

super + {alt,shift} + s
	scrot {-s,-d 3 -u}

super + shift + x
	~/scripts/i3lock.sh

super + shift + m
	~/scripts/rofi/monitor_layout.sh
